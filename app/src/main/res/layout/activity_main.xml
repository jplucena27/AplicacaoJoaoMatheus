<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[2]"
            tools:layout_editor_absoluteY="100dp" tools:layout_editor_absoluteX="141dp" android:id="@+id/imageView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="316dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/editText"
            android:hint="Login" android:text="Login" tools:text="Login"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="380dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/editText2"/>
    <CheckBox
            android:text="Manter Conectado"
            android:layout_width="208dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="472dp"
            tools:layout_editor_absoluteX="101dp" android:id="@+id/checbox" android:checked="true"/>
    <Button
            android:text="Entrar"
            android:layout_width="145dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="553dp"
            tools:layout_editor_absoluteX="133dp" android:id="@+id/button"/>
</android.support.constraint.ConstraintLayout>